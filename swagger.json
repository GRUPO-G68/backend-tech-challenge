{
  "openapi": "3.1.0",
  "swagger": "3.0",
  "info": {
    "title": "Tech Challenge",
    "description": "Sistema desenvolvido para o tech Challenge da fiap",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Cliente",
      "description": "Operações relacionadas ao cliente"
    },
    {
      "name": "Pedido",
      "description": "Operações relacionadas ao pedido"
    }
  ],
  "paths": {
    "/cliente": {
      "get": {
        "tags": ["Cliente"],
        "description": "Clientes cadastrados",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/responseCliente"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Cliente"],
        "description": "Cadastrar um cliente",
        "requestBody": {
          "description": "Dados necessários para o cadastro do cliente",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/requestCliente"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cadastro realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseClientePost"
                }
              }
            }
          },
          "400": {
            "description": "Campo obrigatório em branco"
          }
        }
      }
    },
    "/cliente/{cpf}": {
      "get": {
        "tags": ["Cliente"],
        "description": "Busca de cliente por CPF",
        "parameters": [
          {
            "name": "cpf",
            "in": "path",
            "description": "CPF do cliente",
            "required": true,
            "type": "string",
            "format": "uui"
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseCliente"
                }
              }
            }
          },
          "204": {
            "description": "Nenhum cliente encontrado"
          }
        }
      }
    },
    "/pedido": {
      "get": {
        "tags": ["Pedido"],
        "description": "Buscar todos os pedidos",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responsePedido"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "requestCliente": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "description": "Nome do cliente",
            "example": "Fulano"
          },
          "cpf": {
            "type": "integer",
            "description": "CPF do cliente",
            "example": "44444444444"
          },
          "email": {
            "type": "string",
            "description": "E-mail do cliente",
            "example": "teste@teste.com"
          }
        },
        "required": ["nome", "cpf"]
      },
      "responseCliente": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "description": "Nome do cliente",
            "example": "Fulano"
          },
          "cpf": {
            "type": "integer",
            "description": "CPF do cliente",
            "example": "44444444444"
          },
          "email": {
            "type": "string",
            "description": "E-mail do cliente",
            "example": "teste@teste.com"
          },
          "id": {
            "type": "integer",
            "description": "Id do cliente",
            "format": "uuid"
          }
        }
      },
      "responseClientePost": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Cadastro realizado com sucesso",
            "example": "Cadastro realizado com sucesso"
          }
        }
      },
      "responsePedido": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id do pedido",
            "format": "uuid",
            "example": "1"
          },
          "idCliente": {
            "type": "integer",
            "description": "Id do cliente que solicitou o pedido",
            "example": "1"
          },
          "idSituacao": {
            "type": "integer",
            "description": "Id da situação em que se encontra o pedido",
            "example": "1"
          },
          "createdAt": {
            "type": "datetime",
            "description": "data e hora do recebimento do pedido",
            "example": "12023-10-28T14:42:26.000Z"
          },
          "updatedAt": {
            "type": "datetime",
            "description": "data e hora da atualização da situação do pedido",
            "example": "12023-10-28T14:59:26.000Z"
          },
          "status": {
            "type": "integer",
            "description": "estado que indica se o pedido esta ativo ou foi cancelado",
            "example": "1"
          },
          "situacao": {
            "type": "string",
            "description": "descrição da situação do pedido",
            "example": "Recebido"
          },
          "itens": {
            "type": "array of object",
            "description": "Itens do pedido",
            "example": [
              {
                "id": 1,
                "idPedido": 1,
                "idProduto": 1,
                "quantidade": 2
              },
              {
                "id": 2,
                "idPedido": 1,
                "idProduto": 2,
                "quantidade": 1
              }
            ]
          }
        }
      }
    }
  }
}
