{
  "openapi": "3.1.0",
  "info": {
    "title": "Tech Challenge",
    "description": "Sistema desenvolvido para o tech Challenge da fiap",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Cliente",
      "description": "Operações relacionadas ao cliente"
    },
    {
      "name": "Pedido",
      "description": "Operações relacionadas ao pedido"
    }
  ],
  "paths": {
    "/cliente": {
      "get": {
        "tags": ["Cliente"],
        "description": "Clientes cadastrados",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/responseCliente"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Cliente"],
        "description": "Cadastrar um cliente",
        "requestBody": {
          "description": "Dados necessários para o cadastro do cliente",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/requestCliente"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cadastro realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseClientePost"
                }
              }
            }
          },
          "400": {
            "description": "Campo obrigatório em branco"
          }
        }
      }
    },
    "/cliente/{cpf}": {
      "get": {
        "tags": ["Cliente"],
        "description": "Busca de cliente por CPF",
        "parameters": [
          {
            "name": "cpf",
            "in": "path",
            "description": "CPF do cliente",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseCliente"
                }
              }
            }
          },
          "204": {
            "description": "Nenhum cliente encontrado"
          }
        }
      }
    },
    "/pedido": {
      "get": {
        "tags": ["Pedido"],
        "description": "Buscar todos os pedidos",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responsePedido"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Pedido"],
        "description": "Realizar um novo pedido",
        "requestBody": {
          "description": "Dados necessários para a criação do pedido",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/requestPedido"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pedido realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responsePedido"
                }
              }
            }
          },
          "400": {
            "description": "Erro na criação do pedido"
          }
        }
      },
      "put": {
        "tags": ["Pedido"],
        "description": "Atualizar a situação do pedido para 'Checkout'",
        "requestBody": {
          "description": "Dados necessários para a atualização do pedido",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/requestAtualizarSituacaoPedido"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pedido atualizado para 'Checkout' com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Atualização realizada com sucesso",
                      "example": "Pedido atualizado para 'Checkout' com sucesso"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro na atualização do pedido"
          }
        }
      }
    },
    "/pedido/situacao/{idSituacao}": {
      "get": {
        "tags": ["Pedido"],
        "description": "Buscar pedidos por situação",
        "parameters": [
          {
            "name": "idSituacao",
            "in": "path",
            "description": "ID da situação do pedido",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pedidos encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/responsePedido"
                  }
                }
              }
            }
          },
          "204": {
            "description": "Nenhum pedido encontrado"
          }
        }
      }
    },
    "/pedido/{idPedido}": {
      "get": {
        "tags": ["Pedido"],
        "description": "Buscar um pedido por ID",
        "parameters": [
          {
            "name": "idPedido",
            "in": "path",
            "description": "ID do pedido",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pedido encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responsePedido"
                }
              }
            }
          },
          "204": {
            "description": "Nenhum pedido encontrado"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "requestCliente": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "description": "Nome do cliente",
            "example": "Fulano"
          },
          "cpf": {
            "type": "integer",
            "description": "CPF do cliente",
            "example": "44444444444"
          },
          "email": {
            "type": "string",
            "description": "E-mail do cliente",
            "example": "teste@teste.com"
          }
        },
        "required": ["nome", "cpf"]
      },
      "responseCliente": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "description": "Nome do cliente",
            "example": "Fulano"
          },
          "cpf": {
            "type": "integer",
            "description": "CPF do cliente",
            "example": "44444444444"
          },
          "email": {
            "type": "string",
            "description": "E-mail do cliente",
            "example": "teste@teste.com"
          },
          "id": {
            "type": "integer",
            "description": "Id do cliente",
            "format": "uuid"
          }
        }
      },
      "responseClientePost": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Cadastro realizado com sucesso",
            "example": "Cadastro realizado com sucesso"
          }
        }
      },
      "requestPedido": {
        "type": "object",
        "properties": {
          "idCliente": {
            "type": "integer",
            "description": "ID do cliente que solicitou o pedido",
            "example": "1"
          },
          "itens": {
            "type": "array",
            "description": "Itens do pedido",
            "items": {
              "type": "object",
              "properties": {
                "idProduto": {
                  "type": "integer",
                  "description": "ID do produto",
                  "example": "1"
                },
                "quantidade": {
                  "type": "integer",
                  "description": "Quantidade do produto",
                  "example": "2"
                }
              }
            }
          }
        },
        "required": ["idCliente", "itens"]
      },
      "responsePedido": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id do pedido",
            "format": "uuid",
            "example": "1"
          },
          "idCliente": {
            "type": "integer",
            "description": "Id do cliente que solicitou o pedido",
            "example": "1"
          },
          "idSituacao": {
            "type": "integer",
            "description": "Id da situação em que se encontra o pedido",
            "example": "1"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "data e hora do recebimento do pedido",
            "example": "2023-10-28T14:42:26.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "data e hora da atualização da situação do pedido",
            "example": "2023-10-28T14:59:26.000Z"
          },
          "status": {
            "type": "integer",
            "description": "estado que indica se o pedido esta ativo ou foi cancelado",
            "example": "1"
          },
          "situacao": {
            "type": "string",
            "description": "descrição da situação do pedido",
            "example": "Recebido"
          },
          "itens": {
            "type": "array",
            "description": "Itens do pedido",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "idPedido": {
                  "type": "integer"
                },
                "idProduto": {
                  "type": "integer"
                },
                "quantidade": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "requestAtualizarSituacaoPedido": {
        "type": "object",
        "properties": {
          "idPedido": {
            "type": "string",
            "description": "ID do pedido",
            "example": "1"
          }
        },
        "required": ["idPedido"]
      }
    }
  }
}
